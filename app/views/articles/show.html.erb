<div class="container">
    <h1>Artile details</h1>
    <div class="media position-relative">
        <svg class="bd-placeholder-img mr-3" width="250" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Generic placeholder image:  " preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>Generic placeholder image</title>
            <rect width="100%" height="100%" fill="#6c757d"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em"> </text>
        </svg>
        <div class="media-body">
            <h5 class="mt-0"><%= @article.title %></h5>
            <p><%= simple_format(@article.description) %></p>            
        </div>
    </div>                
    <div class="d-flex flex-row-reverse bd-highlight">
        <div class="p-2 bd-highlight"><%= link_to 'Back', articles_path, class: "btn btn-secondary btn-lg" %></div>
        <div class="p-2 bd-highlight"><%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-lg" %></div>
        <div class="p-2 bd-highlight"><%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary btn-lg" %></div>
    </div>
</div>